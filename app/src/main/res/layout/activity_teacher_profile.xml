<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/welcome"
    tools:context=".TeacherProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="220dp"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:id="@+id/etxt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="16dp"
                android:hint="Name"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"></EditText>

            <EditText
                android:id="@+id/etxt_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="16dp"
                android:hint="Cell"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"

                ></EditText>

            <EditText
                android:id="@+id/etxt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="16dp"
                android:hint="Email"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"></EditText>

            <EditText
                android:id="@+id/etxt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/id"
                android:drawablePadding="16dp"
                android:hint="ID"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"></EditText>

            <EditText
                android:id="@+id/etxt_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/dept"
                android:drawablePadding="16dp"
                android:hint="Department"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"></EditText>

            <EditText
                android:id="@+id/etxt_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect10"
                android:drawableLeft="@drawable/dept"
                android:drawablePadding="16dp"
                android:hint="Gender"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"></EditText>

            <RadioGroup
                android:id="@+id/radiogroup_gender"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radiobutton_male"
                    android:text="male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:checked="true" />
                <RadioButton
                    android:text="female"
                    android:id="@+id/radiobutton_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect4"
                android:gravity="center"
                android:padding="16dp"
                android:text="Edit"
                android:textColor="#ffffff"
                android:textSize="19dp" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect9"
                android:gravity="center"
                android:padding="16dp"
                android:text="Update"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textSize="19dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>