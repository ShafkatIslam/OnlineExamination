<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developers' Profile"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:src="@drawable/nusrum"
                android:contentDescription=""
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#4396b6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nusrum Rashid"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nusrumr@gmail.com"
                    android:textSize="25sp"
                    android:textColor="#484370"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_marginTop="20px"
                android:src="@drawable/tanjim"
                android:scaleX="1"
                android:scaleY="1.3"
                android:contentDescription=""
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#4396b6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanzeem Hasan"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tanzeem.cese.com"
                    android:textSize="25sp"
                    android:textColor="#484370"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:layout_marginTop="20px"
                android:src="@drawable/jawad"
                android:contentDescription=""
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#4396b6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abrar Jawwad Chy"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abrarjawwad@gmail.com"
                    android:textSize="25sp"
                    android:textColor="#484370"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>